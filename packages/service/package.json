{
    "name": "service",
    "version": "1.0.0",
    "type": "module",
    "description": "Redis Streams service with Node.js, Express, and real-time messaging",
    "main": "src/server.ts",
    "exports": {
        ".": "./src/server.ts"
    },
    "scripts": {
        "typecheck": "tsc --noEmit -p tsconfig.test.json",
        "start": "tsx src/server.ts",
        "dev": "tsx watch src/server.ts",
        "dev:docker": "docker-compose up -d redis && tsx watch src/server.ts",
        "build": "tsc",
        "test": "API_KEY= tsx node_modules/mocha/bin/mocha.js 'tests/**/*.test.ts' --timeout 10000 --exit",
        "test:unit": "API_KEY= tsx node_modules/mocha/bin/mocha.js tests/unit.test.ts tests/workoutService.test.ts tests/userService.test.ts --exit",
        "test:integration": "API_KEY= tsx node_modules/mocha/bin/mocha.js tests/redis.test.ts tests/client-integration.test.ts --timeout 10000 --exit",
        "test:api": "API_KEY= tsx node_modules/mocha/bin/mocha.js tests/api.test.ts tests/workoutApi.test.ts --timeout 10000 --exit",
        "test:coverage": "nyc pnpm test",
        "test:watch": "nodemon --exec 'pnpm test'",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "db:generate": "prisma generate",
        "db:migrate": "prisma migrate dev",
        "db:migrate:deploy": "prisma migrate deploy",
        "db:push": "prisma db push",
        "db:studio": "prisma studio",
        "db:seed": "node prisma/seed.js",
        "postinstall": "prisma generate || true"
    },
    "keywords": [
        "redis",
        "streams",
        "nodejs",
        "express",
        "real-time",
        "sse",
        "server-sent-events"
    ],
    "author": "",
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">=8.0.0"
    },
    "dependencies": {
        "@prisma/client": "^5.22.0",
        "express": "^4.18.2",
        "express-rate-limit": "^8.2.1",
        "helmet": "^8.1.0",
        "pino": "^10.1.0",
        "pino-http": "^11.0.0",
        "redis": "^4.6.7",
        "tsx": "^4.21.0",
        "zod": "^4.2.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.17.0",
        "@types/express": "^5.0.6",
        "@types/mocha": "^10.0.10",
        "@types/node": "^25.0.3",
        "@types/pino-http": "^6.1.0",
        "@types/supertest": "^6.0.3",
        "eslint": "^9.17.0",
        "globals": "^15.14.0",
        "mocha": "^10.2.0",
        "nodemon": "^3.0.1",
        "nyc": "^15.1.0",
        "pino-pretty": "^13.1.3",
        "prettier": "^3.1.1",
        "prisma": "^5.22.0",
        "supertest": "^6.3.3",
        "typescript": "^5.9.3"
    }
}