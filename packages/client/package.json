{
  "name": "client",
  "version": "1.0.0",
  "description": "Bike Power Tracker PWA - Track your spin bike with Bluetooth sensors and stream live data",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "NODE_ENV=test tsx --test src/*.test.ts src/**/*.test.ts",
    "test:watch": "NODE_ENV=test tsx --test --watch src/*.test.ts src/**/*.test.ts",
    "test:fuzz": "NODE_ENV=test tsx --test src/bluetooth-fuzz.test.ts",
    "dev": "vite --host",
    "dev:fresh": "pnpm run clear-cache && vite --host",
    "start": "vite --host",
    "start:test": "vite --host --mode test",
    "build": "pnpm run typecheck && vite build",
    "preview": "vite preview --host",
    "clear-cache": "echo 'To clear browser cache: Open DevTools > Application > Clear Storage > Clear site data'",
    "test:e2e": "NODE_ENV=test playwright test --config=test-e2e/playwright.config.js",
    "test:e2e:ui": "NODE_ENV=test playwright test --ui --config=test-e2e/playwright.config.js",
    "test:visual": "NODE_ENV=test playwright test --config=test-e2e/playwright.config.js test-e2e/visual.spec.js",
    "test:visual:update": "NODE_ENV=test playwright test --config=test-e2e/playwright.config.js test-e2e/visual.spec.js --update-snapshots",
    "cap:sync": "npx cap sync",
    "cap:open:android": "CAPACITOR_ANDROID_STUDIO_PATH=/snap/bin/android-studio npx cap open android",
    "cap:open:ios": "npx cap open ios",
    "build:mobile": "pnpm run build && npx cap sync",
    "android:build": "pnpm run build && npx cap sync android",
    "ios:build": "pnpm run build && npx cap sync ios",
    "apk": "./build-apk.sh"
  },
  "keywords": [
    "bike",
    "power",
    "tracker",
    "bluetooth",
    "fitness",
    "cycling",
    "pwa"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/leaflet": "^1.9.21",
    "@types/node": "^25.0.3",
    "@types/web-bluetooth": "^0.0.21",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-pwa": "^1.2.0",
    "workbox-window": "^7.4.0"
  },
  "dependencies": {
    "@capacitor-community/background-geolocation": "^1.2.26",
    "@capacitor-community/bluetooth-le": "^7.3.0",
    "@capacitor/android": "^8.0.0",
    "@capacitor/app": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "leaflet": "^1.9.4"
  }
}
